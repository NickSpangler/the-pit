<h1 style="text-align: center">Sign Up to Enter The PIT!</h1>

<div id="new_user_form" class="center">

<% if @user.errors.any? %>
    <div class="errors_explanation", style="padding: 20px">
        <% @user.errors.values.each do |m| %>
            <p><%= m.to_sentence %></p>
        <% end %>
    </div>
<% end %>

    <%= form_with model: @user, local: :true do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %><br>

        <%= f.label :email %>
        <%= f.text_field :email %><br>

        <%= f.label :password %>
        <%= f.password_field :password %><br>

        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %><br>

        <%= f.submit "Sign Up" %>
        
    <% end %>
</div>

<div class="center" style="text-align: center">
<%= link_to('Sign up with Facebook!', facebook_login_path) %>
</div>
